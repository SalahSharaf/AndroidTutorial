                    android:layout_height="wrap_content"
                    android:text="@string/question_4"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Your Answer : "
                    android:id="@+id/question3Answer"
