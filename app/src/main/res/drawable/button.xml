<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <gradient android:angle="-90" android:endColor="@color/colorPrimaryLight" android:startColor="@color/questionsBackground" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <gradient android:angle="-90" android:endColor="@color/colorPrimaryDark" android:startColor="@color/questionsBackground" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dip" />
            <gradient android:angle="-90" android:endColor="@color/questionsBackground" android:startColor="@color/colorPrimaryDark" />
            <solid android:color="@color/questionsBackground" />

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <gradient android:angle="-90" android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimaryLight" />
        </shape>
    </item>

</selector>